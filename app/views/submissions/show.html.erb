<%= form_for @submission, :html => { :class => "form" } do |f| %>
  
  <%= render :partial => "form_errors", :locals => { :model => @submission } %>
  <%= render :partial => "submission_form", :locals => { :f => f } %>
  <%= render :partial => "form_buttons", :locals => { :f => f, :path => submissions_path } %>

<% end %>