<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Student Name</th>
      <th>Student Email</th>
      <th>Course</th>
      <th>Scheduled Date</th>
      <th>Class Length</th>
      <th>Exam Pickup</th>
      <th>Exam Return</th>
      <th>Professor Name</th>
      <th>Professor Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.id %>
        <td><%= submission.student_name %></td>
        <td><%= submission.student_email %></td>
        <td><%= submission.course_number %></td>
        <td><%= submission.start_time.to_formatted_s(:long_ordinal) %></td>
        <td><%= submission.class_length %></td>
        <td><%= submission.exam_pickup %></td>
        <td><%= submission.exam_return %></td>
        <td><%= submission.professor.name %></td>
        <td><%= submission.professor.email %></td>
        <td><%= link_to "Edit", submission_path(submission) %></td>
        <td><%= link_to "Remove", submission_path(submission),
            :data => {confirm: "Are you sure?"}, :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>